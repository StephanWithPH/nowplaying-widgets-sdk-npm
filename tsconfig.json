{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "ESNext",               // Generate ES module code
    "target": "ES2020",               // Set target for modern JavaScript
    "declaration": true,              // Generate type declarations
    "emitDeclarationOnly": true,      // Emit only type declarations
    "outDir": "./dist",               // Output directory for type definitions
    "moduleResolution": "node",       // Resolve modules like Node.js
    "esModuleInterop": true,          // Allow default imports for CommonJS modules
    "skipLibCheck": true              // Optional: Skip type checking for libraries
  },
  "include": ["src/**/*"],             // Include your source files
  "exclude": ["node_modules", "dist"]  // Exclude unnecessary files
}